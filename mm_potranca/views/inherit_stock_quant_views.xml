<odoo>
    <data>
        <record id="view_stock_quant_inherit" model="ir.ui.view">
            <field name="name">stock.quant.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//tree//field[@name='user_id']" position="replace">
                    <field name="user_ids" string="Usuario" optional="show" readonly="1" widget="many2one_avatar_user"/>
                </xpath>
                <xpath expr="//tree//button[@name='action_apply_inventory']" position="attributes">
                <attribute name="attrs">
                    {'invisible': 1}
                </attribute>
            </xpath>
            </field>
        </record>
    </data>
</odoo>